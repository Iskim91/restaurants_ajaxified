<% if @dose.persisted? %>
  // get html for new dose
  newDose = '<%= j render "doses/show", dose: @dose %>';

  // append new review to list
  doses = document.getElementById('dose-list');
  doses.insertAdjacentHTML('beforeend', newDose);

  // empty our form
  newForm = document.getElementById('new_dose');
  newForm.innerHTML = '<%= j render "doses/form" , dose: Dose.new, cocktail: @cocktail%>'
<% else %>
  newForm = document.getElementById('new_dose');
  newForm.innerHTML = '<%= j render "doses/form" , dose: @dose, cocktail: @cocktail%>'
<% end %>
