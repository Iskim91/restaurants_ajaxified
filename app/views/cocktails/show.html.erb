<div class="container">

  <h1 class="text-center mb-4"><%= @cocktail.name %></h1>
  <div class="cocktail-info d-flex">
    <% if @cocktail.photo.url.nil? %>
      <div class="cocktail-img" style="background-image: url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <% else %>
      <div class="cocktail-img" style="background-image: url(<%= cl_image_path(@cocktail.photo) %>)">
    <% end %>
      </div>
    <div class="dose-list flex-grow" >
      <h4>Ingredients:</h4>
      <ol id="dose-list">
        <% @cocktail.doses.each do |dose| %>
          <%= render "doses/show", dose: dose %>
        <% end %>
      </ol>
    </div>
    <% if @cocktail.user == current_user %>
      <div class="dose-form">
        <%= render "doses/form", cocktail: @cocktail, dose: @dose%>
      </div>
    <% end %>
  </div>
  <div class="review-info">
    <h4 >Reviews</h4>
    <p><%= pluralize @cocktail.reviews.size, "Review" %></p>
    <% if @cocktail.reviews.blank? %>
      <p>Be the first one to leave a review</p>
    <% else %>
      <% @cocktail.reviews.each do |review| %>
        <%= render "reviews/show", review: review %>
      <% end %>
    <% end %>
    <% unless @cocktail.user == current_user %>
      <div class="review-form">
        <p>Leave a review</p>
        <%= render "reviews/form", cocktail: @cocktail, review: @review %>
      </div>
    <% end %>
  </div>
</div>
